<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/bandnames/index.css">
<%- include('../partials/nav') %>

<section>
  <h1>Awful... Awful Fake Bandnames</h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Rank</th>
        <th scope="col">Name</th>
        <th scope="col">Rating</th>
      </tr>
    </thead>
    <tbody>
  <% bandnames.forEach(bandname => { %>
    <tr>
      <td>#</td>
      <td><a href="/bandnames/<%= bandname._id %>"><%= bandname.name %></a></td>
      <td><%= bandname.avg %></td>
        <td>  
          <% if (bandname.owner.equals(user?.profile._id)) { %>
        <form action="/bandnames/<%= bandname._id %>?_method=DELETE" method="POST">
        <button>Delete?</button>
      </form>
      <% } %>
      </td>
  </tr>
  <% }) %>
</tbody>
</table>
</section>

<%- include('../partials/footer') %>